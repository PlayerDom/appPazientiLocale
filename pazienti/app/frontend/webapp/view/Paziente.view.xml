<mvc:View controllerName="frontend.controller.Paziente"
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:form="sap.ui.layout.form" busyIndicatorDelay="0"
	xmlns:layout="sap.ui.layout"
	xmlns:m="sap.m"
	xmlns:uxap="sap.uxap"
	xmlns:l="sap.ui.layout" height="100%">

	<uxap:ObjectPageLayout id="ObjectPageLayout" enableLazyLoading="true" beforeNavigate="onBeforeNavigate" useIconTabBar="true" showTitleInHeaderContent="true" upperCaseAnchorBar="false">
		<uxap:headerTitle>
			<uxap:ObjectPageDynamicHeaderTitle>
				<uxap:expandedHeading>
					<m:Title text="{pazienteModel>/cognome} {pazienteModel>/nome}" wrapping="true"/>
				</uxap:expandedHeading>

				<uxap:snappedHeading>
					<m:FlexBox fitContainer="true" alignItems="Center">
						<m:Avatar src="./images/imageID_275314.png" class="sapUiTinyMarginEnd"/>
						<m:Title text="Denise Smith" wrapping="true" />
					</m:FlexBox>
				</uxap:snappedHeading>

				<!-- <uxap:expandedContent>
					<m:Text text="Senior UI Developer"/>
				</uxap:expandedContent>

				<uxap:snappedContent>
					<m:Text text="Senior UI Developer"/>
				</uxap:snappedContent>

				<uxap:snappedTitleOnMobile>
					<m:Title text="Senior UI Developer"/>
				</uxap:snappedTitleOnMobile> -->

				<uxap:actions>
					<m:Button text="Home" icon="sap-icon://home" type="Emphasized" press="onNavBack"/>
					<m:Button type="Critical" text="Sospendi"/>
					<m:Button type="Negative" text="Termina"/>
					<m:Button type="Success" text="Concludi"/>
				</uxap:actions>
			</uxap:ObjectPageDynamicHeaderTitle>
		</uxap:headerTitle>

		<uxap:headerContent>
			<m:FlexBox wrap="Wrap" fitContainer="true">
				<m:Avatar class="sapUiSmallMarginEnd" src="./images/imageID_275314.png" displaySize="L" />

				<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
					<Label text="Recapiti:"></Label>
					<m:Link text="+33 6 4512 5158"/>
					<m:Link text="DeniseSmith@sap.com"/>
				</layout:VerticalLayout>

				<!-- <layout:HorizontalLayout class="sapUiSmallMarginBeginEnd">
					<m:Image src="./test-resources/sap/uxap/images/linkedin.png"/>
					<m:Image src="./test-resources/sap/uxap/images/Twitter.png" class="sapUiSmallMarginBegin"/>
				</layout:HorizontalLayout>

				<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
					<m:Label text="Hello! I am Denise and I use UxAP"/>
					<m:VBox>
						<m:Label text="Achieved goals"/>
						<m:ProgressIndicator percentValue="30" displayValue="30%"/>
					</m:VBox>
				</layout:VerticalLayout> -->

				<layout:VerticalLayout class="sapUiLargeMarginBeginEnd">
					<m:Label text="Indirizzo: {pazienteModel>/residenza}"/>
					<m:Label text="Codice Fiscale: {pazienteModel>/CF}"/>
					<m:Label text="Medico di Riferimento: {pazienteModel>/medicoDiRiferimento}"/>
				</layout:VerticalLayout>
			</m:FlexBox>
		</uxap:headerContent>

		<uxap:sections>

			<uxap:ObjectPageSection titleUppercase="false" id="RaccoltaAnamnestica" title="Raccolta Anamnestica">
				<uxap:subSections>
					<uxap:ObjectPageSubSection id="RaccoltaAnamnesticaSubSec" titleUppercase="false">
						<uxap:blocks>
							<VBox id="idVBox">

								<FlexBox justifyContent="End" alignItems="End">
									<Button id="editRacAnamnestica" type="Transparent" press="onEditTestRaccoltaAnamnestica" text="{i18n>labelEdit}" />
									<Button id="annullaEditRacAnamnestica" type="Transparent" press="onEditTestRaccoltaAnamnestica" text="{i18n>labelAnnulla}" visible="false"/>
									<Button id="salvaRacAnamnestica" type="Transparent" press="onEditTestRaccoltaAnamnestica" text="{i18n>labelSalva}" visible="false"/>
								</FlexBox>

								<!-- Form di input con testo invisibile per ogni campo, senza valori precompilati -->
								<form:SimpleForm id="formRaccoltaAnamnestica" editable="true" layout="ColumnLayout" columnsM="2" columnsL="2" columnsXL="2">
									<form:content >

										<Label text="Nome" />
										<Input id="nome" placeholder="Inserisci il nome" visible="false" />
										<Text text="Nome invisibile" />

										<Label text="Cognome" />
										<Input id="cognome" placeholder="Inserisci il cognome" visible="false"/>
										<Text text="Cognome invisibile" />

										<Label text="Data di Nascita" />
										<Input id="data_nascita" type="Date" placeholder="Inserisci la data di nascita" visible="false" />
										<Text text="Data di Nascita invisibile" />

										<Label text="Indirizzo di Residenza" />
										<Input id="residenza" placeholder="Inserisci l'indirizzo" visible="false" />
										<Text text="Indirizzo invisibile" />

										<Label text="Telefono" />
										<Input id="telefono" type="Tel" placeholder="Inserisci il numero di telefono" visible="false" />
										<Text text="Telefono invisibile" />

										<Label text="Email" />
										<Input id="email" type="Email" placeholder="Inserisci l'email" visible="false"/>
										<Text text="Email invisibile" />

										<Label text="C.F." />
										<Input id="CF" placeholder="Inserisci il codice fiscale" visible="false"/>
										<Text text="C.F. invisibile" />

										<Label text="Medico di riferimento" />
										<Input id="medico_di_riferimento" placeholder="Inserisci il medico di riferimento" visible="false"/>
										<Text text="Medico invisibile" />

										<Label text="Motivo Visita" />
										<Input id="motivo_visita" placeholder="Inserisci il motivo della visita" visible="false"/>
										<Text text="Motivo Visita invisibile" />

										<Label text="Visita NPI" />
										<Input id="visita_npi" placeholder="Inserisci la visita NPI" visible="false"/>
										<Text text="Visita NPI invisibile" />

										<Label text="Visita Odontoiatrica" />
										<Input id="visita_odontoiatrica" placeholder="Inserisci la visita odontoiatrica" visible="false"/>
										<Text text="Visita Odontoiatrica invisibile" />

										<Label text="Visita ORL" />
										<Input id="visita_orl" placeholder="Inserisci la visita ORL" visible="false"/>
										<Text text="Visita ORL invisibile" />

										<Label text="Audiometria" />
										<Input id="audiometria" placeholder="Inserisci l'audiometria" visible="false"/>
										<Text text="Audiometria invisibile" />

										<Label text="Asilo Nido" />
										<Input id="asilo_nido" placeholder="Inserisci l'asilo nido" visible="false"/>
										<Text text="Asilo Nido invisibile" />

										<Label text="Numero di Bambini in Famiglia" />
										<Input id="numero_bambini_famiglia" type="Number" placeholder="Inserisci il numero di bambini" visible="false"/>
										<Text text="Numero Bambini invisibile" />

										<Label text="Lavoro Genitori" />
										<Input id="lavoro_genitori" placeholder="Inserisci il lavoro dei genitori" visible="false"/>
										<Text text="Lavoro Genitori invisibile" />

										<Label text="Tempo con il Bambino" />
										<Input id="tempo_bambino" placeholder="Inserisci il tempo con il bambino" visible="false"/>
										<Text text="Tempo con il Bambino invisibile" />
									</form:content>
								</form:SimpleForm>

							</VBox>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>

			<uxap:ObjectPageSection titleUppercase="false" title="Anamnesi Remota" id="AnamnesiRemota">
				<uxap:subSections>
					<uxap:ObjectPageSubSection id="AnamnesiRemotaSubSec" titleUppercase="false">
						<uxap:blocks>
							<VBox id="idVBoxAnamnesiRemota">
								<FlexBox justifyContent="End" alignItems="End">
									<Button id="editAnamnesiRemota" type="Transparent" press="onEditTestAnamnesiRemota" text="{i18n>labelEdit}" />
									<Button id="annullaEditAnamnesiRemota" type="Transparent" press="onEditTestAnamnesiRemota" text="{i18n>labelAnnulla}" visible="false"/>
									<Button id="salvaAnamnesiRemota" type="Transparent" press="onEditTestAnamnesiRemota" text="{i18n>labelSalva}" visible="false"/>
								</FlexBox>

								<form:SimpleForm id="formAnamnesiRemota" editable="true" layout="ColumnLayout" columnsM="2" columnsL="2" columnsXL="2">
									<form:content>
										<Label text="Allattamento" />
										<Input id="allattamento" placeholder="Inserisci l'allattamento" visible="false" />
										<Text text="Allattamento invisibile" />

										<Label text="Deambulazione" />
										<Input id="deambulazione" placeholder="Inserisci la deambulazione" visible="false" />
										<Text text="Deambulazione invisibile" />

										<Label text="Gravidanza" />
										<Input id="gravidanza" placeholder="Inserisci la gravidanza" visible="false" />
										<Text text="Gravidanza invisibile" />

										<Label text="Lallazione" />
										<Input id="lallazione" placeholder="Inserisci la lallazione" visible="false" />
										<Text text="Lallazione invisibile" />

										<Label text="Parto" />
										<Input id="parto" placeholder="Inserisci il parto" visible="false" />
										<Text text="Parto invisibile" />

										<Label text="Prime Parole" />
										<Input id="prime_parole" placeholder="Inserisci le prime parole" visible="false" />
										<Text text="Prime Parole invisibili" />

										<Label text="Svezzamento" />
										<Input id="svezzamento" placeholder="Inserisci lo svezzamento" visible="false" />
										<Text text="Svezzamento invisibile" />
									</form:content>
								</form:SimpleForm>
							</VBox>

						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>

			<uxap:ObjectPageSection titleUppercase="false" id="AnamnesiFisiologica" title="Anamnesi Fisiologica">
				<uxap:subSections>
					<uxap:ObjectPageSubSection id="AnamnesiFisiologicaSubSec" titleUppercase="false">
						<uxap:blocks>
							<VBox id="idVBoxAnamnesiFisiologica">
								<FlexBox justifyContent="End" alignItems="End">
									<Button id="editAnamnesiFisiologica" type="Transparent" press="onEditTestAnamnesiFisiologica" text="{i18n>labelEdit}" />
									<Button id="annullaEditAnamnesiFisiologica" type="Transparent" press="onEditTestAnamnesiFisiologica" text="{i18n>labelAnnulla}" visible="false"/>
									<Button id="salvaAnamnesiFisiologica" type="Transparent" press="onEditTestAnamnesiFisiologica" text="{i18n>labelSalva}" visible="false"/>
								</FlexBox>

								<form:SimpleForm id="formAnamnesiFisiologica" editable="true" layout="ColumnLayout" columnsM="2" columnsL="2" columnsXL="2">
									<form:content>
										<Label text="Abitudini Viziate" />
										<Input id="abitudini_viziate" placeholder="Inserisci le abitudini viziate" visible="false" />
										<Text text="Abitudini Viziate invisibile" />

										<Label text="Alimentazione" />
										<Input id="alimentazione" placeholder="Inserisci l'alimentazione" visible="false" />
										<Text text="Alimentazione invisibile" />

										<Label text="Allergie o Intolleranze" />
										<Input id="allergie_intolleranze" placeholder="Inserisci allergie o intolleranze" visible="false" />
										<Text text="Allergie o Intolleranze invisibile" />

										<Label text="Apparecchio Acustico" />
										<Input id="apparecchio_acustico" placeholder="Inserisci apparecchio acustico" visible="false" />
										<Text text="Apparecchio Acustico invisibile" />

										<Label text="Apparecchio Dentale" />
										<Input id="apparecchio_dentale" placeholder="Inserisci apparecchio dentale" visible="false" />
										<Text text="Apparecchio Dentale invisibile" />

										<Label text="Apprendimento" />
										<Input id="apprendimento" placeholder="Inserisci apprendimento" visible="false" />
										<Text text="Apprendimento invisibile" />

										<Label text="Attenzione" />
										<Input id="attenzione" placeholder="Inserisci attenzione" visible="false" />
										<Text text="Attenzione invisibile" />

										<Label text="Capacità Razionali" />
										<Input id="capacita_razionali" placeholder="Inserisci capacità razionali" visible="false" />
										<Text text="Capacità Razionali invisibile" />

										<Label text="Capacità Sociali" />
										<Input id="capacita_sociali" placeholder="Inserisci capacità sociali" visible="false" />
										<Text text="Capacità Sociali invisibile" />

										<Label text="Comunicazione" />
										<Input id="comunicazione" placeholder="Inserisci comunicazione" visible="false" />
										<Text text="Comunicazione invisibile" />

										<Label text="Gioco" />
										<Input id="gioco" placeholder="Inserisci gioco" visible="false" />
										<Text text="Gioco invisibile" />

										<Label text="Occhiali" />
										<Input id="occhiali" placeholder="Inserisci occhiali" visible="false" />
										<Text text="Occhiali invisibile" />

										<Label text="Sport" />
										<Input id="sport" placeholder="Inserisci sport" visible="false" />
										<Text text="Sport invisibile" />

										<Label text="Visite Specialistiche" />
										<Input id="visite_specialistiche" placeholder="Inserisci visite specialistiche" visible="false" />
										<Text text="Visite Specialistiche invisibile" />

										<Label text="Raffreddori" />
										<Input id="raffreddori" placeholder="Inserisci raffreddori" visible="false" />
										<Text text="Raffreddori invisibile" />

										<Label text="Otiti" />
										<Input id="otiti" placeholder="Inserisci otiti" visible="false" />
										<Text text="Otiti invisibile" />

										<Label text="Sonno" />
										<Input id="sonno" placeholder="Inserisci sonno" visible="false" />
										<Text text="Sonno invisibile" />
									</form:content>
								</form:SimpleForm>
							</VBox>

						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>

			<uxap:ObjectPageSection titleUppercase="false" id="FasiInteressi" title="Prime Fasi e Interessi">
				<uxap:subSections>
					<uxap:ObjectPageSubSection id="FasiInteressiSubSec" titleUppercase="false">
						<uxap:blocks>
							<VBox >
								<Panel headerText="Prime Fasi" expanded="true">
									<VBox id="idVBoxPrimeFasi">
										<FlexBox justifyContent="End" alignItems="End">
											<Button id="editPrimeFasi" type="Transparent" press="onEditTestPrimeFasi" text="{i18n>labelEdit}" />
											<Button id="annullaEditPrimeFasi" type="Transparent" press="onEditTestPrimeFasi" text="{i18n>labelAnnulla}" visible="false"/>
											<Button id="salvaPrimeFasi" type="Transparent" press="onEditTestPrimeFasi" text="{i18n>labelSalva}" visible="false"/>
										</FlexBox>

										<form:SimpleForm id="formPrimeFasi" editable="true" layout="ColumnLayout" columnsM="1" columnsL="1" columnsXL="1" >
											<form:content >
												<Label text="Note"  />
												<TextArea id="note" placeholder="Inserisci le note" visible="false" width="100%"/>
												<Text text="Note invisibile" />
											</form:content>
										</form:SimpleForm>
									</VBox>

								</Panel>
								<Panel headerText="Interessi" expanded="true">
									<VBox id="idVBoxInteressi">
										<FlexBox justifyContent="End" alignItems="End">
											<Button id="editInteressi" type="Transparent" press="onEditTestInteressi" text="{i18n>labelEdit}" />
											<Button id="annullaEditInteressi" type="Transparent" press="onEditTestInteressi" text="{i18n>labelAnnulla}" visible="false"/>
											<Button id="salvaInteressi" type="Transparent" press="onEditTestInteressi" text="{i18n>labelSalva}" visible="false"/>
										</FlexBox>

										<form:SimpleForm id="formInteressi" editable="true" layout="ColumnLayout" columnsM="2" columnsL="2" columnsXL="2">
											<form:content>
												<Label text="Animale Preferito"  />
												<Input id="animale_preferito" placeholder="Inserisci l'animale preferito" visible="false" />
												<Text text="Animale preferito invisibile" />

												<Label text="Colore Preferito"  />
												<Input id="colore_preferito" placeholder="Inserisci il colore preferito" visible="false" />
												<Text text="Colore preferito invisibile" />

												<Label text="Gioco Preferito"  />
												<Input id="gioco_preferito" placeholder="Inserisci il gioco preferito" visible="false" />
												<Text text="Gioco preferito invisibile" />
											</form:content>
										</form:SimpleForm>
									</VBox>
								</Panel>
							</VBox>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>






		</uxap:sections>
	</uxap:ObjectPageLayout>
</mvc:View>
 

